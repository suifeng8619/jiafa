<script>
document.addEventListener("DOMContentLoaded", function () {
  const giftSection = document.getElementById("gift-selection");
  if (!giftSection) return;

  const modal = document.getElementById("giftModal");
  const checkboxes = document.querySelectorAll(".gift-checkbox");
  const productForm = document.getElementById("product-form-{{ section.id }}");
  const maxGiftSpan = document.getElementById("max-gifts");
  const quantityInput = document.getElementById("Quantity-{{ section.id }}");

  function getCurrentProductPrice() {
    const priceEl = document.querySelector('[data-product-price]');
    if (priceEl) {
      const priceText = priceEl.textContent.replace(/[^\d.]/g, '');
      return parseFloat(priceText);
    }
    return {{ product.price | money_without_currency }};
  }

  function updateMaxGifts() {
    const price = getCurrentProductPrice();
    const quantity = parseInt(quantityInput?.value || "1", 10);

    let base = 2;
    if (price >= 149) base = 6;
    else if (price >= 99) base = 4;

    const max = base * quantity;
    maxGiftSpan.textContent = max;
    return max;
  }

  function showModal(message) {
    modal.textContent = message;
    modal.style.display = "block";
    modal.style.animation = "fadeIn 0.3s ease-in-out";
    setTimeout(() => {
      modal.style.animation = "fadeOut 0.3s ease-in-out";
      setTimeout(() => {
        modal.style.display = "none";
      }, 300);
    }, 2700);
  }

  let maxGiftCount = updateMaxGifts();

  // ç›‘å¬å˜ä½“åˆ‡æ¢
  document.addEventListener('variant:change', function () {
    maxGiftCount = updateMaxGifts();
  });

  // ç›‘å¬æ•°é‡å˜åŒ–
  if (quantityInput) {
    quantityInput.addEventListener("input", () => {
      maxGiftCount = updateMaxGifts();
    });
  }

  // é™åˆ¶æœ€å¤§å‹¾é€‰èµ å“æ•°
  checkboxes.forEach(checkbox => {
    checkbox.addEventListener("change", () => {
      const selected = document.querySelectorAll(".gift-checkbox:checked");
      if (selected.length > maxGiftCount) {
        checkbox.checked = false;
        showModal("Maximum gift limit reached!");
      }
    });
  });

  // è¡¨å•æäº¤
  if (productForm) {
    productForm.addEventListener('submit', function (e) {
      e.preventDefault();

      const mainProductVariantId = document.querySelector('input[name="id"]').value;
      const mainProductQuantity = parseInt(quantityInput?.value || "1", 10);
      const selectedGifts = Array.from(document.querySelectorAll('.gift-checkbox:checked')).map(cb => cb.value);

      // æ·»åŠ ä¸»å•†å“
      fetch('/cart/add.js', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ items: [{ id: mainProductVariantId, quantity: mainProductQuantity }] })
      })
      .then(res => {
        if (!res.ok) throw new Error('Main product add failed');
        return res.json();
      })
      .then(data => {
        if (selectedGifts.length === 0) {
          window.location.href = '/cart';
          return;
        }
        const giftItems = selectedGifts.map(id => ({
          id: id,
          quantity: 1,
          properties: { 'Free Gift': 'Yes', '_discount_price': 0 }
        }));
        return fetch('/cart/add.js', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ items: giftItems })
        });
      })
      .then(res => {
        if (!res) return;
        if (!res.ok) throw new Error('Gift add failed');
        return res.json();
      })
      .then(data => {
        setTimeout(() => {
          window.location.href = '/cart';
        }, 1000);
      })
      .catch(err => {
        console.error('Error:', err);
      });

      return false;
    }, true);
  }
});
</script>


