      slider.addEventListener('touchmove', function(e) {
        if (!touchStartX || !touchStartY) return;

        touchEndX = e.touches[0].clientX;
        touchEndY = e.touches[0].clientY;

        const deltaX = touchStartX - touchEndX;
        const deltaY = touchStartY - touchEndY;

        // å¦‚æœæ°´å¹³æ»‘åŠ¨è·ç¦»å¤§äºå‚ç›´æ»‘åŠ¨è·ç¦»ï¼Œåˆ™é˜»æ­¢é»˜è®¤è¡Œä¸º
        if (Math.abs(deltaX) > Math.abs(deltaY)) {
          e.preventDefault();
        }
      }, { passive: false });

      slider.addEventListener('touchend', function(e) {
        if (!touchStartX || !touchEndX) return;

        const deltaX = touchStartX - touchEndX;
        const deltaY = touchStartY - touchEndY;
        const minSwipeDistance = 50;

        // åªæœ‰å½“æ°´å¹³æ»‘åŠ¨è·ç¦»å¤§äºå‚ç›´æ»‘åŠ¨è·ç¦»ä¸”è¶…è¿‡æœ€å°è·ç¦»æ—¶æ‰åˆ‡æ¢
        if (Math.abs(deltaX) > Math.abs(deltaY) && Math.abs(deltaX) > minSwipeDistance) {
          const slideWidth = getSlideWidth();
          const currentScroll = slider.scrollLeft;
          const currentIndex = Math.round(currentScroll / slideWidth);

          let newIndex;
          if (deltaX > 0) {
            // å‘å·¦æ»‘åŠ¨ï¼Œæ˜¾ç¤ºä¸‹ä¸€ä¸ªè§†é¢‘
            newIndex = Math.min(totalSlides - 1, currentIndex + 1);
          } else {
            // å‘å³æ»‘åŠ¨ï¼Œæ˜¾ç¤ºä¸Šä¸€ä¸ªè§†é¢‘
            newIndex = Math.max(0, currentIndex - 1);
          }

          scrollToSlide(newIndex);
        }

        // é‡ç½®è§¦æ‘¸åæ ‡
        touchStartX = 0;
        touchStartY = 0;
        touchEndX = 0;
        touchEndY = 0;
      }, { passive: true });

      // é¼ æ ‡æ‹–æ‹½æ”¯æŒ
      let isDragging = false;
      let startPos = 0;
      let startScrollLeft = 0;
      let dragThreshold = 5; // æœ€å°æ‹–æ‹½è·ç¦»

      function handleMouseDown(e) {
        isDragging = true;
        startPos = e.clientX;
        startScrollLeft = slider.scrollLeft;
        slider.classList.add('dragging');
        e.preventDefault();
      }

      function handleMouseMove(e) {
        if (!isDragging) return;

        e.preventDefault();
        const currentX = e.clientX;
        const deltaX = startPos - currentX;

        // åªæœ‰å½“æ‹–æ‹½è·ç¦»è¶…è¿‡é˜ˆå€¼æ—¶æ‰å¼€å§‹æ»šåŠ¨
        if (Math.abs(deltaX) > dragThreshold) {
          slider.scrollLeft = startScrollLeft + deltaX;
        }
      }

      function handleMouseUp() {
        if (isDragging) {
          isDragging = false;
          slider.classList.remove('dragging');
        }
      }

      function handleMouseLeave() {
        if (isDragging) {
          isDragging = false;
          slider.classList.remove('dragging');
        }
      }

      // æ·»åŠ äº‹ä»¶ç›‘å¬å™¨
      slider.addEventListener('mousedown', handleMouseDown);
      document.addEventListener('mousemove', handleMouseMove);
      document.addEventListener('mouseup', handleMouseUp);
      slider.addEventListener('mouseleave', handleMouseLeave);

      // ç›‘å¬æ»šåŠ¨äº‹ä»¶ï¼ˆé˜²æŠ–å¤„ç†ï¼‰
      slider.addEventListener('scroll', function() {
        if (!isScrolling) {
          isScrolling = true;
        }

        clearTimeout(scrollTimeout);
        scrollTimeout = setTimeout(function() {
          updateNavDots();
          isScrolling = false;
        }, 50);
      });

      // é”®ç›˜å¯¼èˆªæ”¯æŒ
      document.addEventListener('keydown', function(e) {
        const slideWidth = getSlideWidth();
        const currentScroll = slider.scrollLeft;
        const currentIndex = Math.round(currentScroll / slideWidth);

        if (e.key === 'ArrowLeft') {
          e.preventDefault();
          const newIndex = Math.max(0, currentIndex - 1);
          scrollToSlide(newIndex);
        } else if (e.key === 'ArrowRight') {
          e.preventDefault();
          const newIndex = Math.min(totalSlides - 1, currentIndex + 1);
          scrollToSlide(newIndex);
        }
      });
      
      // åˆå§‹åŒ–çŠ¶æ€
      updateNavDots();
    

